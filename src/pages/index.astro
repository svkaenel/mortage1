---
import '@/styles/globals.css'
import Layout from '../layouts/Layout.astro';
import { Button } from "@/components/ui/button"
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card"
import { Home, Calculator, BookOpen } from 'lucide-react';
---

<Layout title="MortgagePro - Your Trusted Mortgage Partner">
	<main class="container mx-auto px-4 py-8">
		<header class="text-center mb-12">
			<h1 class="text-4xl font-bold mb-4">Welcome to MortgagePro</h1>
			<p class="text-xl text-muted-foreground">Your Trusted Partner in Home Financing</p>
		</header>

		<section class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
			<Card>
				<CardHeader>
					<CardTitle class="flex items-center">
						<Home className="mr-2" /> Home Loans
					</CardTitle>
					<CardDescription>Explore our range of home loan options</CardDescription>
				</CardHeader>
				<CardContent>
					<Button variant="outline" class="w-full">Learn More</Button>
				</CardContent>
			</Card>
			<Card>
				<CardHeader>
					<CardTitle class="flex items-center">
						<Calculator className="mr-2" /> Mortgage Calculator
					</CardTitle>
					<CardDescription>Calculate your monthly payments</CardDescription>
				</CardHeader>
				<CardContent>
					<Button variant="outline" class="w-full">Calculate Now</Button>
				</CardContent>
			</Card>
			<Card>
				<CardHeader>
					<CardTitle class="flex items-center">
						<BookOpen className="mr-2" /> Mortgage Blog
					</CardTitle>
					<CardDescription>Stay informed with our latest articles</CardDescription>
				</CardHeader>
				<CardContent>
					<Button variant="outline" class="w-full"><a href="/blog">Blog</a></Button>
				</CardContent>
			</Card>
		</section>

		<section class="text-center">
			<h2 class="text-2xl font-semibold mb-4">Ready to Get Started?</h2>
			<Button size="lg">Apply Now</Button>
		</section>
	</main>
</Layout>